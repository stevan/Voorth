  "compilerOptions": {
    "target": "es2022",
    "module": "node16",

    "strict" :true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,

    "sourceMap": true,
    "outDir": "js/",
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
